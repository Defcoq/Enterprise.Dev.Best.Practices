@using EA.JP.Ecommerce.Services.ViewModels
@using EA.JP.Ecommerce.Controllers.ViewModels.CustomerAccount
@model CustomersOrderSummaryView
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_CustomerAccount.cshtml";
}


@section TitleContent
{
    Your Order History
}

 

        <h2>Your Orders</h2>

        <ul>
            @foreach(OrderSummaryView order in Model.Orders)
            {
            
            <li>
                @Html.Encode(order.Created.ToLongDateString()) 
                if (order.IsSubmitted == false){ 
                @Html.ActionLink("Pay", "CreatePaymentFor", "Payment",new { orderId = order.Id}, null)
                } 
                @Html.ActionLink("View Detail", "Detail", "Order",new { orderId = order .Id}, null)
            </li>
            }
        </ul>

    




